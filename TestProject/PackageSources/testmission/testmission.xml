                </ObjectReference>
            </Actions>
            <Condition>
                <And>
                    <GreaterThan>
                        <LHS>
                            <Property>
                                <Name>Simvar.AltitudeAMSL</Name>
                                <Units>feet</Units>
                                <PropertySource>User</PropertySource>
                            </Property>
                        </LHS>
                        <RHS>
                            <Constant>
                                <Double>1800.000</Double>
                            </Constant>
                        </RHS>
                    </GreaterThan>
                    <GreaterThan>
                        <LHS>
                            <Property>
                                <Name>Simvar.IndicatedAirSpeed</Name>
                                <Units>knots</Units>
                                <PropertySource>User</PropertySource>
                            </Property>
                        </LHS>
                        <RHS>
                            <Constant>
                                <Double>80.000</Double>
                            </Constant>
                        </RHS>
                    </GreaterThan>
                </And>
            </Condition>
